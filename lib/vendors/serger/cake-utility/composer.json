{
  "name": "serger/cake-utility",
  "description": "CakePHP 3.x Utility classes such as Inflector, String, and Hash without Cake/Core dependency",
  "type": "library",
  "keywords": [
    "inflector",
    "string",
    "hash"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "CakePHP Community",
      "homepage": "https://github.com/cakephp/utility/graphs/contributors"
    }
  ],
  "require": {
    "php": ">=5.6.0"
  },
  "require-dev": {
    "vimeo/psalm": ">=5.9.0",
    "phpunit/phpunit": "^9",
    "rector/rector": "^2.0"
  },
  "suggest": {
    "ext-intl": "To use Text::transliterate() or Text::slug()",
    "lib-ICU": "To use Text::transliterate() or Text::slug()",
    "ext-ctype": "To use Text::parseFileSize()",
    "ext-dom": "To use Xml",
    "ext-simplexml": "To use Xml",
    "ext-libxml": "To use Xml"
  },
  "autoload": {
    "psr-4": {
      "SergeR\\CakeUtility\\": "src"
    }
  }
}
