#ws-plugin-nrg-about-tab
  .about
    text-align: center;
    padding: 1em;
    background-color: mintcream;
    border: 1px solid mediumseagreen;
    width: 50%;
    max-width: 700px;
    margin: 0 auto;

#ws-plugin-nrg-shipping-settings
  .error
    background-color: mistyrose;
    border:1px solid tomato;
    color: firebrick;

  .tab-content
    border: 1px solid #ddd;
    box-sizing: border-box;

  dl
    line-height: 1.3;
    font-family: "DejaVu Serif", Georgia, Times, serif;
    font-size: 16px;

  dt
    font-weight: bold;
    margin-left: 1.5em;
    display: block;

    &:before
      content: "Q: ";
      margin-left: -1.5em;

  dd
    margin: 0 0 1em 1.5em;
    display: block;

    &:before
      content: "A: ";
      margin-left: -1.5em;
      font-weight: bold;

  var
    font-family: monospace;
    font-style: italic;

  code
    font-family: monospace;
    background-color: lavenderblush;
    color:darkred;
    padding-left: 0.5em;
    padding-right: 0.5em;

  pre
    display: block;
    padding: 0.5em;
    background-color: ghostwhite;
    color:darkred;
    border: 1px solid gainsboro;
    box-shadow: 2px 2px 4px 1px rgba(0,0,0,0.07);
